_logo_size = image-size('../images/logo.png')

.landing.page // Namespace
  position relative
  background-color #1D1D1D
  margin-bottom 300px
  padding-top 100px

  .informational
    container()
    
    > .content
      row()

  .example
    columns(3)
    .iphone
      position relative
      margin 0 auto
      -image-background('../images/iphone', 'png')
    .appscreen
      position absolute
      top 17.3%
      left 8.65%

  .description
    columns(3)
    padding-top line_breaks(2)

  .title
    clearfix()
    margin-bottom line_breaks(2)
    .logo
      display block
      float left
      margin-right 1em
      -image-background('../images/logo', 'png')
    .name
      scale_type 4
      display block
      float left
      height _logo_size[1]
      margin 0
      color #4F4F4F
      em
        color white
        font-style normal

  .calltoaction
    position absolute
    top 100%
    left 0
    right 0
    height 240px

    .register.form
    .success
      max-width 400px
      margin line_breaks(2) auto

    .success
      text-align center

    label
      text-align center

